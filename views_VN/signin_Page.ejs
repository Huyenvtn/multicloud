<% include master %>
<% include header %>		
			
			<section class="page-header">
				<div class="container">

					<h1><b>ĐĂNG NHẬP</b></h1>

					<!-- breadcrumbs -->
					<ol class="breadcrumb">
						<li class="active">Đăng nhập</li>
					</ol><!-- /breadcrumbs -->

				</div>
			</section>
			<!-- /PAGE HEADER -->




			<!-- -->
			<section>
				<div class="container">
					
					<div class="row">

						<!-- LOGIN -->
						<div class="col-md-6 col-sm-6">

							<!-- login form -->
							<form action="/signin" method="post" class="sky-form boxed">

								<header class="size-18 margin-bottom-20">
									Tôi đã có tài khoản
								</header>
								
								<fieldset class="nomargin">

									<label class="input margin-bottom-10">
										<i class="ico-append fa fa-envelope"></i>
										<input required type="text" name="username" placeholder="Email ">
									</label>
								
									<label class="input margin-bottom-10">
										<i class="ico-append fa fa-lock"></i>
										<input required type="password" name="password" placeholder="Mật khẩu">
										<b class="tooltip tooltip-bottom-right">Phải là các con số hoặc ký tự latin </b>
									</label>

									<div class="clearfix note margin-bottom-30">
										<a class="pull-right" href="#">Quên mật khẩu?</a>
									</div>
									
									<label class="checkbox weight-300">
										<input type="checkbox" name="checkbox-inline">
										<i></i> Duy trì đăng nhập
									</label>

								</fieldset>

								<footer>
									<button type="submit" class="btn btn-primary noradius pull-right"><i class="fa fa-check"></i> ĐĂNG NHẬP</button>
								</footer>

							</form>
							<!-- /login form -->

							<!-- ALERT -->
							
							<% if( message.length != 0 ) {%>
								<div class="alert alert-mini alert-danger margin-bottom-30">
									<strong>Ồ không!</strong> 
									<% for (let i=0; i<message.length; i++) { %>
										<li><%= message[i] %></li> 
									<% } %>
							<% } %>
							
							</div><!-- /ALERT -->

						</div>
						<!-- /LOGIN -->

						<!-- SOCIAL LOGIN -->
						<div class="col-md-6 col-sm-6">
							<form action="/signin" method="post" class="sky-form boxed">

								<header class="size-18 margin-bottom-20">
									Đăng nhập bằng tài khoản xã hội khác của bạn
								</header>
								
								<fieldset class="nomargin">

									<div class="row">
									
										<div class="col-md-8 col-md-offset-2">

											<a href="/auth/facebook" class="btn btn-block btn-social btn-facebook margin-bottom-10">
												<i class="fa fa-facebook"></i> Đăng nhập với Facebook
											</a>
									
										</div>
									</div>

								</fieldset>

								<footer>
									Bạn vẫn chưa có tài khoản ? <a href="/signup"><strong>Click để đăng ký tài khoản mới nhé !</strong></a>
								</footer>

							</form>

						</div>
						<!-- /SOCIAL LOGIN -->

					</div>

					
				</div>
			</section>
			<!-- / -->
<% include footer %>