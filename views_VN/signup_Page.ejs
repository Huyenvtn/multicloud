<% include master %>
<% include header %>
<section class="page-header">
	<div class="container">

		<h1>ĐĂNG KÝ</h1>
							<!-- breadcrumbs -->
							<ol class="breadcrumb">
								<li class="active">Đăng ký</li>
							</ol><!-- /breadcrumbs -->
					
	</div>
</section>
			<!-- /PAGE HEADER -->
<section>
	<div class="container">
					
					<div class="row">

						<!-- LOGIN -->
						<div class="col-md-6 col-sm-6">

							<!-- ALERT -->
							<!--
							<div class="alert alert-mini alert-danger margin-bottom-30">
								<strong>Oh snap!</strong> Login Incorrect!
							</div>
							-->
							<!-- /ALERT -->

							<!-- register form -->
							<form class="nomargin sky-form boxed" action="#" method="post">
								<header>
									<i class="fa fa-users"></i> ĐĂNG KÝ
									</header>

								<fieldset class="nomargin">					
									<label class="input margin-bottom-10">
										<i class="ico-append fa fa-envelope"></i>
										<input type="text" name="email" placeholder="Email">
										<b class="tooltip tooltip-bottom-right">Dùng để đăng nhập vào ứng dụng</b>
									</label>
								
									<label class="input margin-bottom-10">
										<i class="ico-append fa fa-lock"></i>
										<input type="password" name="password" placeholder="Mật khẩu">
										<b class="tooltip tooltip-bottom-right">Phải là các con số hoặc ký tự latin</b>
									</label>
								
									<label class="input margin-bottom-10">
										<i class="ico-append fa fa-lock"></i>
										<input type="password" name="passwordConfirm" placeholder="Nhập lại mật khẩu">
										<b class="tooltip tooltip-bottom-right">Phải là các con số hoặc ký tự latin</b>
									</label>
									<label class="input margin-bottom-10">
										<input type="text" name="phoneNumber" placeholder="Số điện thoại">
										<b class="tooltip tooltip-bottom-right">Phải là các con số latin</b>
									</label>
									
									<label class="input margin-bottom-10">
										<i class="ico-append fa fa-envelope"></i>
										<input type="text" name="name" placeholder="Tên người dùng">
										<b class="tooltip tooltip-bottom-right">Dùng để đăng nhập vào ứng dụng</b>
									</label>

									<div class="margin-top-30">
										<label class="checkbox nomargin"><input class="checked-agree" type="checkbox" name="checkbox">
											<i></i>Tôi đồng ý với các  <a href="#" data-toggle="modal" data-target="#termsModal">Điều khoản sử dụng</a></label>
									</div>
								</fieldset>

								<div class="row margin-bottom-20">
									<div class="col-md-12">
										<button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> ĐĂNG KÝ</button>
									</div>
								</div>

							</form>
							<!-- /register form -->

							<!-- ALERT -->
							
							<% if( message.length != 0 ) {%>
								<div class="alert alert-mini alert-danger margin-bottom-30">
									<strong>Ô không!</strong> 
									<% for (let i=0; i<message.length; i++) { %>
										<li><%= message[i] %></li> 
									<% } %>
							<% } %>
							
							</div><!-- /ALERT -->

						</div>
						<!-- /LOGIN -->

						<!-- SOCIAL LOGIN -->
						<div class="col-md-6 col-sm-6">
							<form action="#" method="post" class="sky-form boxed">

								<header class="size-18 margin-bottom-20">
									Đăng ký tài khoản bằng tài khoản khác của bạn
								</header>
								
								<fieldset class="nomargin">

									<div class="row">
									
										<div class="col-md-8 col-md-offset-2">
											<a href="/auth/facebook" class="btn btn-block btn-social btn-facebook margin-bottom-10">
												<i class="fa fa-facebook"></i> Đăng nhập với Facebook
											</a>
										</div>
									</div>

								</fieldset>

								<footer>
									Bạn đã có tài khoản rồi ? <a href="/signin"><strong>Trở về đăng nhập!</strong></a>
								</footer>

							</form>

						</div>
						<!-- /SOCIAL LOGIN -->

					</div>

					
				</div>
			</section>
			<!-- / -->

<% include footer %>