<!-- LEFT -- ACCESSED ACCOUNT -->
<div class="col-lg-3 col-md-3 col-sm-3 col-lg-pull-9 col-md-pull-9 col-sm-pull-9" style="font-family: Lucida Sans Unicode; font-weight: 500;border-right: #ffded5 1px solid;">

    <div class="side-nav margin-bottom-30 side-nav-head text-color">
        <h3 style="font-weight: 600;font-family: 'Open Sans',Arial,Helvetica,sans-serif;"><span class="fa fa-cloud"></span> TÀI KHOẢN ĐÁM MÂY</h3>
    </div>
    
    <!-- button add account
    <a href="/auth/google" style="width: 100%" class="btn btn-success margin-bottom-30"><span class="ico-transparent ico-hover et-cloud"></span> Add Google Account </a>
    <a href="/auth/onedrive" style="width: 100%" class="btn btn-success margin-bottom-30"><span class="ico-transparent ico-hover et-cloud"></span> Add OneDrive Account </a> -->
    
    <!-- button add account-->
    <a onclick="document.getElementById('idtype').style.display='block'" style=" border-radius: 5px; font-weight: 600; border: none; font-size: large; width: 100% ;font-family: 'Open Sans',Arial,Helvetica,sans-serif; color: white; background-color: #37e571;" class="btn btn-success margin-bottom-30 shadowBtn"><span class="ico-transparent ico-hover et-cloud"></span> THÊM TÀI KHOẢN </a>
    <!--<a onclick="document.getElementById('remove-alert').style.display='block'" style=" font-weight: 600; font-size: large; width: 100%; color: white;" class="btn btn-success margin-bottom-30 shadow"><span class="ico-transparent ico-hover fa fa-plus-circle et-cloud"></span> Add Account </a>
    -->
    <!-- Google Account Access -->		
    <div class="side-nav margin-bottom-30 ">
        <h4 style="font-weight: 600;" class="text-color">&nbsp;<span class="fa fa-google-plus"></span> Google</h4>
    
        <% if (user.google.length) { %>          
            <% for(var i = 0; i < user.google.length; i++) { %>
                <ul class="list-group list-unstyled well shadow"  id="googledrive" value="<%= i %>" >
                    <li><strong>Tên</strong>: <%= user.google[i].name %></li>
                    <li style= "word-wrap:break-word;"><strong>Email</strong>: <%= user.google[i].email %></li>
                </ul>
            <% } %>
        <% } %>
    </div>   

    <!-- OneDrive Account Access -->
    <div class="side-nav margin-bottom-30 ">
        <h4 style="font-weight: 600;"class="text-color">&nbsp;<span class="fa fa-windows"></span> OneDrive</h4>
    
        <% if (user.onedrive.length) { %>          
            <% for(var i = 0; i < user.onedrive.length; i++) { %>
                <ul class="list-group list-unstyled well shadow" id="onedrive" value="<%= i %>">
                    <li><strong>Tên</strong>: <%= user.onedrive[i].name %></li>
                    <li style= "word-wrap:break-word;"><strong>Email</strong>: <%= user.onedrive[i].email %></li>
                </ul>
            <% } %>
        <% } %>
    </div> 

    <!--Dropbox account-->
    <div class="side-nav margin-bottom-30 ">
        <h4 style="font-weight: 600;"class="text-color">&nbsp;<span class="fa fa-dropbox"></span> Dropbox</h4>
        <% if (user.dropbox.length) { %>          
            <% for(var i = 0; i < user.dropbox.length; i++) { %>
                <ul class="list-group list-unstyled well shadow" id="dropbox" value="<%= i %>">
                    <li><strong>Tên</strong>: <%= user.dropbox[i].name %></li>
                    <li style= "word-wrap:break-word;"><strong>Email</strong>: <%= user.dropbox[i].email %> </li>
                    
                </ul>
                <% } %>
        <% } %>
    </div>  
</div>