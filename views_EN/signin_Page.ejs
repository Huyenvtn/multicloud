<% include master %>
<% include header %>		
			
			<section class="page-header">
				<div class="container">

					<h1><b>LOGIN</b></h1>

					<!-- breadcrumbs -->
					<ol class="breadcrumb">
						<li class="active">Login</li>
					</ol><!-- /breadcrumbs -->

				</div>
			</section>
			<!-- /PAGE HEADER -->




			<!-- -->
			<section>
				<div class="container">
					
					<div class="row">

						<!-- LOGIN -->
						<div class="col-md-6 col-sm-6">

							<!-- login form -->
							<form action="/signin" method="post" class="sky-form boxed">

								<header class="size-18 margin-bottom-20">
									I already have an account
								</header>
								
								<fieldset class="nomargin">

									<label class="input margin-bottom-10">
										<i class="ico-append fa fa-envelope"></i>
										<input required type="text" name="username" placeholder="Email address/ Phone number">
										<b class="tooltip tooltip-bottom-right">Needed to verify your account</b>
									</label>
								
									<label class="input margin-bottom-10">
										<i class="ico-append fa fa-lock"></i>
										<input required type="password" name="password" placeholder="Password">
										<b class="tooltip tooltip-bottom-right">Only latin characters and numbers</b>
									</label>

									<div class="clearfix note margin-bottom-30">
										<a class="pull-right" href="#">Forgot Password?</a>
									</div>
									
									<label class="checkbox weight-300">
										<input type="checkbox" name="checkbox-inline">
										<i></i> Keep me logged in
									</label>

								</fieldset>

								<footer>
									<button type="submit" class="btn btn-primary noradius pull-right"><i class="fa fa-check"></i> LOG IN</button>
								</footer>

							</form>
							<!-- /login form -->

							<!-- ALERT -->
							
							<% if( message.length != 0 ) {%>
								<div class="alert alert-mini alert-danger margin-bottom-30">
									<strong>Oh snap!</strong> 
									<% for (let i=0; i<message.length; i++) { %>
										<li><%= message[i] %></li> 
									<% } %>
							<% } %>
							
							</div><!-- /ALERT -->

						</div>
						<!-- /LOGIN -->

						<!-- SOCIAL LOGIN -->
						<div class="col-md-6 col-sm-6">
							<form action="/signin" method="post" class="sky-form boxed">

								<header class="size-18 margin-bottom-20">
									Sign In with other social account
								</header>
								
								<fieldset class="nomargin">

									<div class="row">
									
										<div class="col-md-8 col-md-offset-2">

											<a href="/auth/facebook" class="btn btn-block btn-social btn-facebook margin-bottom-10">
												<i class="fa fa-facebook"></i> Sign in with Facebook
											</a>

											<a href="/auth/google" class="btn btn-block btn-social btn-google margin-bottom-10">
												<i class="fa fa-google-plus"></i> Sign in with Google
											</a>
									
										</div>
									</div>

								</fieldset>

								<footer>
									Don't have an account yet? <a href="page-register-1.html"><strong>Click to register!</strong></a>
								</footer>

							</form>

						</div>
						<!-- /SOCIAL LOGIN -->

					</div>

					
				</div>
			</section>
			<!-- / -->
<% include footer %>